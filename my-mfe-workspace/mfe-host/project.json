{
  "name": "mfe-host",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "mfe-host/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/mfe-host",
        "index": "mfe-host/src/index.html",
        "baseHref": "/",
        "main": "mfe-host/src/main.ts",
        "tsConfig": "mfe-host/tsconfig.app.json",
        "assets": ["mfe-host/src/favicon.ico", "mfe-host/src/assets"],
        "styles": ["mfe-host/src/styles.css"],
        "scripts": [],
        "webpackConfig": "mfe-host/webpack.config.ts",
        "postcssConfig": "mfe-host/postcss.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "mfe-host/src/environments/environment.ts",
              "with": "mfe-host/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "mfe-host/webpack.config.prod.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mfe-host:build",
        "hmr": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "mfe-host:build:development"
        },
        "production": {
          "buildTarget": "mfe-host:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/react:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "mfe-host:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "mfe-host:serve:development"
        },
        "production": {
          "serveTarget": "mfe-host:serve:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "mfe-host/jest.config.ts"
      }
    }
  }
}
