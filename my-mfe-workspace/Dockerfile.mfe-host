# Stage 1: Build
FROM node:20-alpine AS builder
WORKDIR /app

# Copy only package files and install dependencies (cache efficient)
COPY package.json package-lock.json ./
RUN for i in 1 2 3; do npm install --legacy-peer-deps && break || sleep 10; done

# Copy the rest of the workspace
COPY . .

# Build only mfe_host
RUN npx nx build mfe-host

# Stage 2: Serve
FROM nginx:alpine
COPY --from=builder /app/dist/mfe-host /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]